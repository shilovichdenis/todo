@model ToDo.Models.Project

<section class="modal-content">
    <div class="form-title">
        <p class="h4 text-center">CREATE PROJECT</p>
        <a class="form-title-closelink bi bi-x-square" href="#" data-bs-dismiss="modal"></a>
    </div>
    <div class="px-4 pb-2 pt-3 form-main">
        <form asp-action="Create" asp-controller="Projects">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="isHidden" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" type="datetime-local" id="date" hidden />
                <input class="form-control" value="@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()" disabled />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<Type>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="#" class="block btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
            </div>
        </form>
    </div>
</section>
<script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
