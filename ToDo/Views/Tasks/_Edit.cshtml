@model ToDo.Models.Task

<section class="modal-content" id="edit-form-info">
    <div class=" form-title">
        <p class="h4 text-center">EDIT TASK</p>
        <a class="form-title-closelink bi bi-x-square" href="#" data-bs-dismiss="modal"></a>
    </div>
    <div class="px-4 pb-2 pt-3 form-main">
        <form method="post" asp-page="/Home/DisplayView" asp-page-handler="EditTask" id="edit-task-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden />
            <input asp-for="ProjectId" hidden />
            <input asp-for="isCompleted" hidden />
            <input type="datetime-local" asp-for="CreatedDate" id="date" hidden />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control" asp-items="@Html.GetEnumSelectList<Priority>()"></select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="#" class="block btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
